@model IEnumerable<Projekt.Models.Sites>


<h1>Our latest sites!</h1>

@foreach (var item in Model) {
    <div class="seperatePost">
        
        <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
        <br>
        <h3>Description of the site:</h3>
        <p>@Html.DisplayFor(modelItem => item.Description)</p>
        <br>
        <h3>The sites link:</h3>
        <a href="@Html.DisplayFor(modelItem => item.Url)" class="postLink">Click here to visit</a>
        <p>Posted by: @Html.DisplayFor(modelItem => item.ApplicationUser.Firstname) @Html.DisplayFor(modelItem => item.ApplicationUser.Lastname)</p>
        <p class="postDate">@Html.DisplayFor(modelItem => item.Created)</p>
        <a asp-action="Details" asp-controller="Sites" asp-route-id="@item.SitesId" class="btn btn-primary">Read more</a>
        <hr>
    </div>
}